{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "600",
    "height": 600,
    "title": "Total deaths case of the COVID-19 of each country",
    "data": {
        "url": "https://raw.githubusercontent.com/LianzhengXie/fit3179/main/Visualisation%202/assets/data/covid19CountryWise.csv"
    },
    "params": [
        {
            "name": "region_selection",
            "value": "Africa",
            "bind": {
                "input": "select",
                "options": [
                    "Africa",
                    "Americas",
                    "Europe",
                    "Western Pacific",
                    "Eastern Mediterranean",
                    "South-East Asia"
                ],
                "labels": [
                    "Africa",
                    "Americas",
                    "Europe",
                    "Western Pacific",
                    "Eastern Mediterranean",
                    "South-East Asia"
                ],
                "name": "Region: "
            }
        },
        {
            "name": "total_deaths_range",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 1040506,
                "step": 10,
                "name": "Total Deaths Range: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum['Total Deaths'] > total_deaths_range"
        },
        {
            "filter": "null == region_selection || datum.Region == region_selection"
        }
    ],
    "mark": "bar",
    "encoding": {
        "y": {
            "field": "Country",
            "type": "nominal",
            "title": "Country",
            "sort": "-x"
        },
        "x": {
            "field": "Total Deaths",
            "title": "Total Deaths",
            "type": "quantitative"
        },
        "color": {
            "field": "Country",
            "type": "nominal"
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal"
            },
            {
                "field": "Total Cases",
                "type": "quantitative",
                "format": ","
            },
            {
                "field": "Total_Recovered",
                "type": "quantitative",
                "format": ","
            },
            {
                "field": "Total Deaths",
                "type": "quantitative",
                "format": ","
            },
            {
                "field": "Deaths/1M pop",
                "type": "quantitative",
                "format": ","
            }
        ]
    }
}
